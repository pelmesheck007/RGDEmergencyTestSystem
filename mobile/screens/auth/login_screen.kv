<LoginScreen>:
    name: 'login'
    error_message: ""

    MDFloatLayout:
        md_bg_color: app.rjd_light_red

        MDCard:
            size_hint: .85, .6
            pos_hint: {"center_x": .5, "center_y": .5}
            elevation: 4
            padding: 25
            spacing: 25
            orientation: "vertical"
            md_bg_color: app.rjd_white

            MDLabel:
                text: "Вход в систему"
                font_style: "H5"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: "Custom"
                text_color: app.rjd_dark_red

            MDTextField:
                id: username
                hint_text: "Логин"
                size_hint_x: .9
                pos_hint: {"center_x": .5}
                icon_left: "account"
                line_color_normal: app.rjd_dark_red
                line_color_focus: app.rjd_dark_red

            MDTextField:
                id: password
                hint_text: "Пароль"
                size_hint_x: .9
                pos_hint: {"center_x": .5}
                icon_left: "key"
                password: True
                line_color_normal: app.rjd_dark_red
                line_color_focus: app.rjd_dark_red

            MDLabel:
                text: root.error_message
                theme_text_color: "Error"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            MDRaisedButton:
                id: login_btn
                text: "ВОЙТИ"
                size_hint_x: .9
                pos_hint: {"center_x": .5}
                md_bg_color: app.rjd_dark_red
                on_release: root.login()