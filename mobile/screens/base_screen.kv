<BaseScreen>:
    MDFloatLayout:
        md_bg_color: app.rjd_light_red

        MDCard:
            size_hint: .9, .88
            pos_hint: {"center_x": .5, "top": .95}
            elevation: 2
            padding: [20, 15, 20, 15]
            spacing: 12
            orientation: "vertical"
            md_bg_color: app.rjd_white
            radius: [12]

            MDTopAppBar:
                id: toolbar
                title: root.screen_title
                left_action_items: [["arrow-left", lambda x: root.back_to_previous()]] if root.show_back_button else []
                right_action_items: [["menu", lambda x: root.open_menu()]] if root.show_menu_button else []
                elevation: 2
                md_bg_color: app.rjd_dark_red
                specific_text_color: app.rjd_white
                font_style: "H6"
                pos_hint: {"top": 1}
                size_hint_y: None
                height: dp(56)

            ScrollView:
                bar_width: dp(4)
                bar_color: app.rjd_dark_red

                BoxLayout:
                    id: content_box
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [0, 10, 0, 20]
                    spacing: 15

                    MDSpinner:
                        id: loading_spinner
                        size_hint: None, None
                        size: dp(36), dp(36)
                        pos_hint: {'center_x': 0.5}
                        active: root.loading