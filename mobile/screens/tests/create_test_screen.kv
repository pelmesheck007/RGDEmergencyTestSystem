<CreateTestScreen>:
    name: "create_test"

    MDFloatLayout:
        md_bg_color: app.rjd_light_red

        MDCard:
            size_hint: .9, .88
            pos_hint: {"center_x": .5, "top": .95}
            elevation: 2
            padding: [20, 15, 20, 15]
            spacing: 12
            orientation: "vertical"
            md_bg_color: app.rjd_white
            radius: [12]

            MDTopAppBar:
                id: menu_button
                title: "Создание теста"
                elevation: 2
                md_bg_color: app.rjd_dark_red
                specific_text_color: app.rjd_white
                font_style: "H6"
                size_hint_y: None
                height: dp(56)
                right_action_items: [["arrow-left", lambda x: root.back_to_previous()]]

            ScrollView:
                bar_width: dp(4)
                bar_color: app.rjd_dark_red

                MDBoxLayout:
                    id: content_container
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "16dp"
                    padding: "10dp"

                    # Блок создания теста
                    MDBoxLayout:
                        id: test_form_box
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: "12dp"
                        padding: "10dp"
                        md_bg_color: app.theme_cls.bg_light
                        radius: [12,]
                        opacity: 1
                        disabled: False

                        MDTextField:
                            id: test_name
                            hint_text: "Название теста *"
                            required: True
                            mode: "rectangle"

                        MDTextField:
                            id: description
                            hint_text: "Описание"
                            multiline: True
                            mode: "rectangle"

                        MDTextField:
                            id: time_limit
                            hint_text: "Время (минуты)"
                            input_filter: "int"
                            input_type: "number"
                            mode: "rectangle"

                        MDTextField:
                            id: passing_score
                            hint_text: "Проходной балл (%)"
                            input_filter: "int"
                            input_type: "number"
                            mode: "rectangle"

                        MDTextField:
                            id: attempts_limit
                            hint_text: "Лимит попыток"
                            input_filter: "int"
                            input_type: "number"
                            mode: "rectangle"

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: "48dp"
                            spacing: "10dp"

                            MDRectangleFlatButton:
                                id: theme
                                text: root.selected_theme_name
                                on_release: root.open_theme_menu()
                                size_hint_x: 0.7

                            MDRaisedButton:
                                text: "Добавить"
                                on_release: root.open_add_theme_dialog()
                                size_hint_x: 0.3

                            MDSpinner:
                                id: theme_loader
                                size_hint: None, None
                                size: "30dp", "30dp"
                                active: False

                            MDTextField:
                                id: num_tasks
                                hint_text: "Количество заданий"
                                input_filter: "int"
                                input_type: "number"
                                mode: "rectangle"
                                on_text_validate: root.show_task_creation_ui()
                                size_hint_y: None
                                height: "48dp"

                        MDRaisedButton:
                            text: "Создать тест"
                            pos_hint: {"center_x": 0.5}
                            on_release: root.create_test()
                            size_hint_y: None
                            height: "48dp"

                    # Блок создания заданий
                    MDBoxLayout:
                        id: tasks_section
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: "12dp"
                        opacity: 0
                        disabled: True
                        padding: "10dp"



                        MDBoxLayout:
                            id: tasks_container
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: "10dp"


<TaskForm>:
    orientation: "vertical"
    size_hint_y: None
    height: self.minimum_height
    spacing: "8dp"
    padding: "10dp"
    md_bg_color: app.theme_cls.bg_light
    radius: [12,]

    MDLabel:
        id: title_label
        text: "Задание"
        theme_text_color: "Primary"
        bold: True
        size_hint_y: None
        height: "24dp"

    MDTextField:
        id: question_field
        hint_text: "Вопрос *"
        multiline: True
        size_hint_y: None
        height: "80dp"
        mode: "rectangle"

    MDRectangleFlatButton:
        id: type_button
        text: "Тип: текст"
        on_release: root.open_task_type_menu()
        size_hint_y: None
        height: "48dp"

    MDTextField:
        id: options_count_field
        hint_text: "Количество вариантов (для radio/checkbox)"
        input_filter: "int"
        input_type: "number"
        on_text_validate: root.update_options()
        size_hint_y: None
        height: 0
        opacity: 0
        mode: "rectangle"

    MDBoxLayout:
        id: options_container
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height
        spacing: "4dp"
