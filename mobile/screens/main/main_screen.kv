<MainScreen>:
    name: 'main'

    MDFloatLayout:
        md_bg_color: app.rjd_light_red

        MDCard:
            size_hint: .92, .9
            pos_hint: {"center_x": .5, "top": .95}
            elevation: 2
            padding: dp(16)
            spacing: dp(12)
            orientation: "vertical"
            md_bg_color: app.rjd_white
            radius: [12]

            MDTopAppBar:
                id: menu_button
                title: root.screen_title
                left_action_items: [["menu", lambda x: root.open_menu()]]
                right_action_items: [["logout", lambda x: root.logout()]]
                md_bg_color: app.rjd_dark_red
                specific_text_color: app.rjd_white
                size_hint_y: None
                height: dp(56)

            ScrollView:
                MDBoxLayout:
                    id: content_box
                    orientation: "vertical"
                    spacing: dp(16)
                    padding: [dp(10), dp(10), dp(10), dp(30)]
                    size_hint_y: None
                    height: self.minimum_height
